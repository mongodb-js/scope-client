{
  "name": "mongodb-scope-client",
  "description": "A client for mongodb-scope-server that works in the browser or a server.",
  "version": "0.8.0",
  "author": "Lucas Hrabovsky <lucas@mongodb.com> (http://imlucas.com)",
  "homepage": "http://github.com/mongodb-js/scope-client",
  "repository": {
    "type": "git",
    "url": "git://github.com/mongodb-js/scope-client.git"
  },
  "dependency-check": {
    "ignore": [
      "mongodb-datasets"
    ]
  },
  "license": "Apache-2.0",
  "scripts": {
    "check": "mongodb-js-precommit",
    "fmt": "mongodb-js-fmt lib/*.js test/*.js",
    "docs": "gulp docs",
    "start": "zuul --local 3001 --open -- test/*.test.js",
    "ci": "npm test",
    "test": "mocha --reporter mocha-evergreen-reporter || npm run mandatory-cleanup",
    "mandatory-cleanup": "mongodb-scope-server-stop --testing",
    "prestart": "mongodb-scope-server-start --testing",
    "poststart": "npm run mandatory-cleanup",
    "pretest": "mongodb-scope-server-start --testing",
    "posttest": "npm run mandatory-cleanup"
  },
  "precommit": [
    "check"
  ],
  "dependencies": {
    "ampersand-model": "^6.0.2",
    "async": "^1.5.2",
    "debug": "^2.2.0",
    "event-stream": "^3.3.2",
    "lodash.omit": "^3.1.0",
    "lodash.trimright": "^3.0.2",
    "mongodb-connection-model": "^3.0.10",
    "mongodb-extended-json": "^1.5.7",
    "mongodb-ns": "^1.0.3",
    "raf": "^3.1.0",
    "socket.io-client": "^1.4.2",
    "socket.io-stream": "0.9.0",
    "superagent": "^1.6.1"
  },
  "devDependencies": {
    "backbone": "^1.2.3",
    "bson": "^0.4.20",
    "del": "^2.2.0",
    "dox": "^0.8.0",
    "eslint-config-mongodb-js": "^1.0.6",
    "gulp": "^3.9.0",
    "gulp-util": "^3.0.7",
    "handlebars": "^4.0.5",
    "lodash.range": "^3.1.3",
    "mocha": "^2.3.4",
    "mocha-evergreen-reporter": "0.0.7",
    "mongodb-datasets": "^0.1.5",
    "mongodb-js-fmt": "^0.0.3",
    "mongodb-js-precommit": "^0.2.8",
    "mongodb-runner": "^3.1.15",
    "mongodb-scope-server": "^0.12.0",
    "pre-commit": "^1.1.2",
    "through2": "^2.0.0",
    "zuul": "^3.8.0"
  }
}
